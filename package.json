{
  "type": "module",
  "name": "inactivity-shutdown-windows",
  "version": "5.0.0",
  "description": "An intelligent Windows auto-shutdown utility that monitors CPU and network activity with advanced averaging algorithms and user-friendly interface.",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "reset": "node app.js --reset-config",
    "export": "node app.js --export-config",
    "import": "node app.js --import-config",
    "web": "node app.js --port=3000",
    "help": "node app.js --help",
    "clean": "rm -f app.config.json && echo \"Configuration reset. Run 'npm start' to reconfigure.\""
  },
  "keywords": [
    "auto-shutdown",
    "windows-utils",
    "system-monitor",
    "inactivity-detection",
    "power-management",
    "cpu-monitoring",
    "network-monitoring",
    "energy-saving",
    "automation",
    "nodejs"
  ],
  "author": {
    "name": "Theerawat Patthawee",
    "email": "smrmakeyt@gmail.com",
    "url": "https://github.com/ttwrpz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ttwrpz/inactivity-shutdown-windows.git"
  },
  "bugs": {
    "url": "https://github.com/ttwrpz/inactivity-shutdown-windows/issues"
  },
  "homepage": "https://github.com/ttwrpz/inactivity-shutdown-windows#readme",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "os": [
    "win32"
  ],
  "dependencies": {
    "@colors/colors": "^1.5.0",
    "chegs-simple-logger": "^1.1.0",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "figlet": "^1.5.2",
    "nconf": "^0.12.0",
    "powershell": "^2.3.2",
    "prompt": "^1.3.0",
    "systeminformation": "^5.12.6"
  },
